<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_activity_dialog"
    android:orientation="vertical"
    tools:context=".sale.BillingStyleDetailActivity">

    <include layout="@layout/activity_dialog_top" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_no"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_logo"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_code"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_class"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/tv_style_no"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/iv_logo"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_class"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_price"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/tv_style_no"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_style_no"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_price"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_name"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_style_no"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_name"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_sizes"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/tv_style_no"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_style_no"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_sizes"
            android:visibility="gone"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/tv_style_storage"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/tv_style_class"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/tv_style_no"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/sale_billing_add_storage"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/default_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_3"
            android:src="@mipmap/common_color_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sale_billing_add_select_color"
            android:textColor="@color/default_title_color"
            android:textSize="@dimen/sp_10" />


    </LinearLayout>

    <com.yyy.fuzhuangpad.view.color.ColorGroup
        android:id="@+id/cg_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/bg_line_dotted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sale_billing_add_color"
            android:textColor="@color/default_title_color"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sale_billing_add_size"
            android:textColor="@color/default_title_color"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sale_billing_add_storage"
            android:textColor="@color/default_title_color"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sale_billing_form_qty"
            android:textColor="@color/default_title_color"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20" />
