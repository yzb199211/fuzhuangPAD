<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_style_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="kus0001"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_style_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_style_no"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="kus0001"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_style_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_style_class"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:text="kus0001"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/sp_10" />

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/tv_style_price"
        android:layout_centerHorizontal="true"
        android:layout="@+id/tv_style_price"
        android:src="@mipmap/icon_checked"
        android:visibility="invisible" />
</RelativeLayout>
