<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/dp_435"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/bg_login_white"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_260"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/bg_login2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/iv"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bg_login_logo2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/bg_login_user" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_login_edit"
                android:gravity="center_vertical"
                android:hint="@string/common_user"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/sp_10" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/bg_login_edit"
                android:gravity="center_vertical"
                android:hint="@string/common_pwd"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textSize="@dimen/sp_10" />

            <RelativeLayout
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <CheckBox
                    android:id="@+id/cb_remember_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_remember_pwd"
                    android:textColor="@color/gray2"
                    android:textDirection="ltr" />

                <ImageView
                    android:id="@+id/iv_sweep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_sweep"
                    android:paddingRight="@dimen/dp_5"
                    android:src="@mipmap/bg_sweep" />

                <TextView
                    android:id="@+id/tv_sweep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/login_sweep"
                    android:textColor="@color/gray2" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/bg_login_enter2" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
