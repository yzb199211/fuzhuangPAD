<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_activity_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".customer.CustomerDetailActivity">

    <include layout="@layout/activity_dialog_top" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_detail_title"
        android:textColor="@color/default_text_color"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.yyy.fuzhuangpad.view.search.SearchText
            android:id="@+id/se_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            app:seEditColor="@color/default_text_color"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/customer_detail_code"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchEdit
            android:id="@+id/se_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:seEditColor="@color/default_text_color"
            app:seEditSize="@dimen/sp_10"
            app:seMust="true"
            app:seTilte="@string/customer_detail_name"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.yyy.fuzhuangpad.view.SelectView
            android:id="@+id/sv_type"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            app:svContentColor="@color/default_text_color"
            app:svContentSize="@dimen/sp_10"
            app:svMust="true"
            app:svTilte="@string/customer_detail_type"
            app:svTitleColor="@color/default_text_color"
            app:svTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchEdit
            android:id="@+id/se_name_short"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:seEditColor="@color/default_text_color"
            app:seEditSize="@dimen/sp_10"
            app:seMust="true"
            app:seTilte="@string/customer_detail_name_short"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.yyy.fuzhuangpad.view.SelectView
            android:id="@+id/sv_sale"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            app:svContentColor="@color/default_text_color"
            app:svContentSize="@dimen/sp_10"
            app:svTilte="@string/customer_detail_saler"
            app:svTitleColor="@color/default_text_color"
            app:svTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchEdit
            android:id="@+id/se_contacts"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:seEditColor="@color/default_text_color"
            app:seEditSize="@dimen/sp_10"
            app:seTilte="@string/customer_detail_contacts"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <com.yyy.fuzhuangpad.view.SelectView
            android:id="@+id/sv_dateStop"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            app:svContentColor="@color/default_text_color"
            app:svContentSize="@dimen/sp_10"
            app:svTilte="@string/common_date_stop"
            app:svTitleColor="@color/default_text_color"
            app:svTitleSize="@dimen/sp_10" />

        <com.yyy.fuzhuangpad.view.search.SearchEdit
            android:id="@+id/se_phone"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            app:seEditColor="@color/default_text_color"
            app:seEditSize="@dimen/sp_10"
            app:seInputType="number"
            app:seMaxLength="11"
            app:seTilte="@string/customer_detail_phone"
            app:seTitleColor="@color/default_text_color"
            app:seTitleSize="@dimen/sp_10" />

    </LinearLayout>

    <com.yyy.fuzhuangpad.view.search.SearchEdit
        android:id="@+id/se_address"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:seEditColor="@color/default_text_color"
        app:seEditSize="@dimen/sp_10"
        app:seTilte="@string/customer_detail_address"
        app:seTitleColor="@color/default_text_color"
        app:seTitleSize="@dimen/sp_10" />

    <com.yyy.fuzhuangpad.view.remark.RemarkEdit
        android:id="@+id/re_remark"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:seEditColor="@color/default_text_color"
        app:seEditSize="@dimen/sp_10"
        app:seTilte="@string/color_detail_remark"
        app:seTitleColor="@color/default_text_color"
        app:seTitleSize="@dimen/sp_10" />
</LinearLayout>